{
    "name": "heydoc/heydoc",
    "description": "Documentation website based on markdown and html files",
    "type": "library",
    "license": "MIT",
    "homepage": "http://github.com/nicolas-brousse/HeyDoc",
    "keywords": [],

    "authors": [
        {
            "name": "Nicolas Brousse",
            "email": "pro@nicolas-brousse.fr",
            "homepage": "http://nicolas-brousse.fr",
            "role": "Developer"
        },
        {
            "name": "Christophe Massolin",
            "email": "christophe.massolin@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "pimple/pimple": "1.0.*",
        "twig/twig": "1.*",
        "brainsware/php-markdown-extra-extended": "dev-master",
        "symfony/console": "~2.3",
        "symfony/finder": "~2.3",
        "symfony/filesystem": "~2.3",
        "symfony/yaml": "~2.3",
        "symfony/http-foundation": "~2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },

    "autoload": {
        "psr-0": { "HeyDoc": "." }
    },

    "bin": ["bin/heydoc"],

    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
