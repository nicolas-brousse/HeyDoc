<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>{{ page.title }} | {{ app.config.title }}</title>
    {% if app.config.has('description') %}<meta name="description" content="{{ app.config.description }}">{% endif %}
    {% if app.config.has('author') %}<meta name="author" content="{{ app.config.author }}">{% endif %}

    <meta name="generator" content="HeyDoc">

    <style>
    {% include 'assets/css/normalize.css' %}
    {% include 'assets/css/app.css' %}
    </style>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <header>
        <div class="wrapper">
            <p class="title">{{ app.config.title }}</p>
            {% if app.config.has('description') %}<p class="description">{{ app.config.description }}</p>{% endif %}
        </div>
    </header>

    <nav>
        <div class="wrapper">
          <a href="{{ first_page_path() }}">Start</a>
        </div>
    </nav>

    <section>
        <div class="wrapper">
            <h1>{{ page.title }}</h1>
            {% if app.config.date_modified == true %}<p>Last updated at {{ page.updatedAt|date('Y-m-d H:i:s') }}</p>{% endif %}

            <hr>

            <div class="content">
                {{ content|raw }}
            </div>
        </div>
    </section>

    <footer>
        <div class="wrapper">
            <p>Generated by <a href="#">HeyDoc!</a> with version {{ heydoc_version() }}.</p>
        </div>
    </footer>
</body>
</html>
