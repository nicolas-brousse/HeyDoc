<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>{{ page.title }} | {{ app.config.title }}</title>
    {% if app.config.has('description') %}<meta name="description" content="{{ app.config.description }}">{% endif %}
    {% if app.config.has('author') %}<meta name="author" content="{{ app.config.author }}">{% endif %}

    <meta name="generator" content="HeyDoc">

    <style>
    {% include 'assets/css/bootstrap.min.css' %}
    {% include 'assets/css/highlight.css' %}
    {% include 'assets/css/app.css' %}
    </style>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <div class="container">
        <div class="header">
            <h3 class="text-muted"><a href="{{ path('/') }}">{{ app.config.title }}</a></h3>
        </div>

        <ul>
        {% for page in get_tree().pages %}
            <li><a href="{{ app.request.baseUrl }}{{ page.url }}">{{ page.title }}</a></li>
        {% endfor %}
        </ul>

        <h1>{{ page.title }}</h1>
        {% if app.config.date_modified == true %}<p class="last-modified-at">Last updated at {{ page.updatedAt|date('Y-m-d H:i:s') }}</p>{% endif %}

        <hr>

        <div class="row content">
            {{ content|raw }}
        </div>

        <div class="footer">
            <p>Generated by <a href="#">HeyDoc!</a> with version {{ heydoc_version() }}.</p>
        </div>

    </div> <!-- /container -->

</body>
</html>
